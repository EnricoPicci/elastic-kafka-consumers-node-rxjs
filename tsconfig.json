{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "allowJs": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "lib": ["es2019"]
    },
    "include": ["*.ts", "bin/*.ts", "src/*.ts", "src/**/*.ts"],
    "exclude": ["node_modules"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2019", "dom"]
}
